set bell-style visible
set visible-stats on
set mark-directories on
set mark-modified-lines on
set completion-ignore-case on
set show-all-if-ambiguous on

set input-meta on
set output-meta on
set convert-meta off

Meta-p: previous-history
"\ep":  previous-history
Meta-n: next-history
"\en":  next-history
Meta-r: reverse-search-history
"\er":  reverse-search-history
Meta-s: forward-search-history
"\es":  forward-search-history
Meta-P: history-search-backward
"\eP":  history-search-backward
Meta-N: history-search-forward
"\eN":  history-search-forward

"\C-u": kill-whole-line
"\C-xu": undo

## f8
"\e[19~": " | grep -n -e "
## S-f8
"\e[19;2~": "find . -type f -print0 | xargs -0 -e grep -n -e "
